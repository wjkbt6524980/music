/* pages/index/index.wxss */

.indexContainer {
    width: 100%;
    height: 100%;
}



/* 轮播图 */
.banner {
    width: 100%;
    height: 300rpx;
}
.banner image {
    width: 100%;
    height: 100%;
}



/* 五个图标导航 */
.navList {
    display: flex;
}
.navItem {
    display: flex;
    flex:1;
    flex-direction: column;
    align-items: center;
}
.navItem .iconfont {
    width: 100rpx;
    height: 100rpx;
    margin: 20rpx 0;
    border-radius: 50%;
    background-color: rgb(240, 19, 19);
    text-align: center;
    line-height: 100rpx;
    font-size: 50rpx;
    color:#fff
}
.navItem text {
    font-size: 26rpx;
}




/* 歌曲推荐 */
.recommend {
    font-size: 32rpx;
    padding: 20rpx 20rpx;
}
/* 歌曲推荐滑动区 */
.recommendScroll {
    display: flex;
    height: 300rpx;
}
.scrollItem {
    width: 200rpx;
    margin-right: 20rpx;
}
.scrollItem image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}
.scrollItem text {
    /* 单行文本溢出隐藏 */
    /* white-space: nowrap;
    display: block;
    overflow:hidden;
    text-overflow: ellipsis; */
    /* 多行文本溢出 */
    display: -webkit-box;
    overflow:hidden;
    text-overflow:ellipsis;
    -webkit-box-orient:vertical;  /*设置对齐模式*/
    -webkit-line-clamp: 2;
}



/* 排行榜 */
.topList {
    padding: 20rpx;
}
.topListSwiper {
  height: 600rpx;
}
.topListSwiperItem {
    width: 96%;
    background-color: skyblue;
}
.topListSwiperItem .title {
    font-size: 40rpx;
    line-height: 80rpx;
}
.topListSwiperItem .musicRow {
    display: flex;
}
.musicRow {
    margin: 20rpx 0;
}
.musicRow image {
    width: 100rpx;   
    height: 100rpx;
}
.musicRow .count {
    flex: 1;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
}
.musicRow .musicName {
    flex: 2;    
    height: 100rpx;
    text-align: left;
    line-height: 100rpx;
    max-width: 400rpx;
    white-space:nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
